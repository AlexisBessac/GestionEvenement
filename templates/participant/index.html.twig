{% extends 'base.html.twig' %}

{% block title %}Liste des participants{% endblock %}

{% block body %}

    <style>
        h1{
            color: #318ce7;
        }
    </style>

    <div class="container py-5">
    
    <h1 class="text-center">Liste des participants</h1>

    <a href="{{ path('app_participant_new') }}" class="btn btn-primary my-4" title="Créer un participant">Créer un participant</a>

    <table class="table table-striped table-bordered">
        <thead>
            <tr>
                <th>Nom</th>
                <th>Prenom</th>
                <th>Email</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
        {% for participant in participants %}
            <tr>
                <td>{{ participant.nom }}</td>
                <td>{{ participant.prenom }}</td>
                <td>{{ participant.email }}</td>
                <td>
                    <a href="{{ path('app_participant_show', {'id': participant.id}) }}" class="btn btn-outline-primary" title="Voir le détail">Voir le Détail</a>
                    <a href="{{ path('app_participant_edit', {'id': participant.id}) }}" class="btn btn-outline-success" title="Modifier">Modifier</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="4">Aucun participant trouvé</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    </div>
{% endblock %}
