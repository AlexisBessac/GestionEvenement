{% extends 'base.html.twig' %}

{% block title %}Liste des événements{% endblock %}

{% block body %}

    <style>
        h1 {
            color: #343a40;
            font-weight: bold;
        }

        .btn-primary {
            background-color: #007bff;
            border-color: #007bff;
        }

        .btn-outline-primary {
            border-color: #007bff;
            color: #007bff;
        }

        .btn-outline-primary:hover {
            background-color: #007bff;
            color: #fff;
        }

        .btn-outline-success {
            border-color: #28a745;
            color: #28a745;
        }

        .btn-outline-success:hover {
            background-color: #28a745;
            color: #fff;
        }

        .table {
            margin-top: 20px;
            border-collapse: separate;
            border-spacing: 0 15px;
        }

        .table th, .table td {
            vertical-align: middle;
            background-color: #f8f9fa;
            border: none;
            padding: 15px;
        }

        .table th {
            background-color: #343a40;
            color: #fff;
            border-top-left-radius: 10px;
            border-top-right-radius: 10px;
        }

        .table td:first-child {
            border-bottom-left-radius: 10px;
            border-top-left-radius: 10px;
        }

        .table td:last-child {
            border-bottom-right-radius: 10px;
            border-top-right-radius: 10px;
        }

        .table-striped tbody tr:nth-of-type(odd) {
            background-color: #e9ecef;
        }

        .actions {
            display: flex;
            gap: 10px;
        }
    </style>

    <div class="container py-5">
        <h1 class="text-center">Liste des Evénements</h1>

        <a href="{{ path('app_evenements_new') }}" class="btn btn-primary my-2" title="Créer un événement">Créer un événement</a>

        <table class="table table-striped">
            <thead class="thead-dark">
                <tr>
                    <th>Titre</th>
                    <th>Date et heure</th>
                    <th>Lieu</th>
                    <th>Description</th>
                    <th>Actions</th>
                </tr>
            </thead>
            <tbody>
            {% for evenement in evenements %}
                <tr>
                    <td>{{ evenement.titre }}</td>
                    <td>{{ evenement.EventAt ? evenement.EventAt|date('d-m-Y H:i') : '' }}</td>
                    <td>{{ evenement.lieu }}</td>
                    <td>{{ evenement.description }}</td>
                    <td class="actions">
                        <a href="{{ path('app_evenements_show', {'id': evenement.id}) }}" class="btn btn-outline-primary" title="Voir le détail">Voir le détail</a>
                        <a href="{{ path('app_evenements_edit', {'id': evenement.id}) }}" class="btn btn-outline-success" title="Modifier">Modifier</a>
                    </td>
                </tr>
            {% else %}
                <tr>
                    <td colspan="5">Aucun événement trouvé</td>
                </tr>
            {% endfor %}
            </tbody>
        </table>
    </div>
{% endblock %}
